@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_HomePageView.cshtml";
}
<section class="contactSec mytop-7 bgColor py-md-5">
    <div class="container">

        <h2 class="text-capitalize mb-4">Contact us today</h2>
        <div class="row">
            <div class="col-xl-4 col-md-4">
                <div class="contact_box">
                    <div class="cbox_inset">
                        <div class="cIcon"><i class="fa fa-map-marker" aria-hidden="true"></i></div>
                        <div class="cbTitle"> Address </div>
                        <hr>
                        11 WILKIE CRES GUELPH, ON N1L 0B1

                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-4">
                <div class="contact_box">
                    <div class="cbox_inset">
                        <div class="cIcon"> <i class="fa fa-building-o" aria-hidden="true"></i> </div>
                        <div class="cbTitle"> Registerd Office </div>
                        <hr>
                        <p> 1800-1631 DICKSON AVENUE </p>
                        <p> (LANDMARK 6) KELOWNA BC V1Y 0B5 CANADA </p>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-4">
                <div class="contact_box">
                    <div class="cbox_inset">
                        <div class="cIcon"> <i class="fa fa-phone" aria-hidden="true"></i> </div>
                        <div class="cbTitle"> Quick Contact </div>
                        <hr>
                        <p> +1-226-780-5304 </p>
                        <p> info@hirerockstechnologies.com </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <h3 class="text-capitalize mt-5"> Contact us by email </h3>
                <p> Below is a contact form and you can submit your information for further discussion, project quotation & consultant. </p>
                <form>
                    <div class="row">
                        <div class="col-xl-6 col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" name="Full Name" placeholder="Full Name" required="required">
                            </div>
                        </div>
                        <div class="col-xl-6 col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" name="Email" placeholder="Email" required="required">
                            </div>
                        </div>
                        <div class="col-xl-6 col-md-6">
                            <div class="form-group">
                                <input type="number" class="form-control" name="Phone" placeholder="Phone Number" required="required">
                            </div>
                        </div>
                        <div class="col-xl-6 col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" name="subject" placeholder="Subject" required="required">
                            </div>
                        </div>
                        <div class="col-xl-12 col-md-12">
                            <div class="form-group">
                                <textarea name="message" rows="5" class="form-control" placeholder="Message"></textarea>
                            </div>
                        </div>

                        <div class="col-xl-12 col-md-12">
                            <div class="form-group text-right">
                                <button type="submit" class="btn btn-primary btn-lg"> <i class="fa fa-paper-plane" aria-hidden="true"></i> SEND </button>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</section>