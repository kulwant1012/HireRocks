@model PS.HireRocks.Model.InviteUserViewModel
@{
    ViewBag.Title = "InviteUser";
}

<h2>InviteUser</h2>

@using (Html.BeginForm("SendInvitationToUser", "Company", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" id="submitButton" class="btn btn-default" value="Invite User" />
        </div>
    </div>
}

