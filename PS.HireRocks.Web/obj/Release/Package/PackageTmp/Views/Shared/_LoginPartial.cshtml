@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated && Session[PS.HireRocks.Web.Helpers.SessionNameConstants.LogedInUserSession] != null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <span class="userLogin">
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage", @class = "userName" })
        </span>
            <span class="userLogin">
                <a class="login mr-3" href="javascript:document.getElementById('logoutForm').submit()"> <i class="fa fa-sign-out" aria-hidden="true"></i>Logout</a>

            </span>
    }
}
else
{

    <span class="userLogin">
        <a class="userName" href="@Url.Action("Register", "Account")">Register</a>

    </span>
    <span class="userLogin">
        <a class="login" href="@Url.Action("Login", "Account")"><i class="fa fa-sign-in" aria-hidden="true"></i> <span class="lbllogin">Login</span></a>

    </span>

    }
